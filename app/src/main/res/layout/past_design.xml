<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/fullTransparent"
    android:id="@+id/event_past_ll"
    android:elevation="6dp"
    app:cardCornerRadius="2dp"
    app:layout_constraintHeight_min="420dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mn,n,nm"
            android:id="@+id/text_home_pastdesign"
            android:fontFamily="@font/yearone"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingTop="11dp"
            />

        <WebView
            android:id="@+id/pastdesign_webpg"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_below="@id/text_home_pastdesign"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/black" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/pastdesign_webpg"
            android:id="@+id/past_desginimg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scroll right"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/aldrich"
            android:textColor="#B8B3B3"
            android:textSize="18sp"
            android:layout_below="@id/past_desginimg"
            android:paddingStart="10dp"
            android:paddingBottom="6dp"
            android:id="@+id/scrollr"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scroll left"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/aldrich"
            android:textColor="#B8B3B3"
            android:id="@+id/scrolll"
            android:textSize="18sp"
            android:layout_below="@id/past_desginimg"
            android:paddingStart="10dp"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>